@model CourseWork2.Models.CreateReview

@{
    ViewData["Title"] = "Add Review";
}

<h2>Add Review</h2>

<div class="review-input">
    <form asp-controller="Review" asp-action="CreateReview" method="post">
        <input type="hidden" asp-for="FragranceId" />

        <div class="form-group">
            <label for="CustomerId">Customer</label>
            <select asp-for="CustomerId" asp-items="ViewBag.CustomerList" class="form-control"></select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Rating">Rating</label>
            <input asp-for="Rating" type="number" min="0" max="5" step="0.1" class="form-control" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ReviewText">Review</label>
            <textarea asp-for="ReviewText" class="form-control" rows="4"></textarea>
            <span asp-validation-for="ReviewText" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
